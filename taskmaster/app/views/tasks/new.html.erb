<h1> Add a task </h1>


<%= form_for @task do |f| %>
  <%= f.label :Name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit class: "button"%>
<% end %>





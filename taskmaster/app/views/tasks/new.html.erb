<h1> Add a task </h1>


<%= form_for @task do |f| %>
  <%= f.label :Name %>
  <%= f.text_field :name  %><br>
    <%= f.label :description %>
    <%= f.text_area :description , cols:25, rows:3 %>
  <!-- <%= f.text_field :description, class: "desc" %> -->
  <%= f.submit class: "button"%>
<% end %>





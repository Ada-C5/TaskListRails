<%= form_for :task, method: :put, url: "/tasks/#{@task[:id]}" do |f| %>
  <p class="form-title">
  <%= f.label :title %>
  <%= f.text_field :title, value: "#{@task[:title]}" %>
  </p>

  <p class="form-title">
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-description', value: "#{@task[:description]}" %>
  </p>

  <p class="form-title">
  <%= f.label :completed_at %>
  <%= f.text_field :completed_at, class: 'form-completed', value: "#{@task[:completed_at]}" %>
  </p>

  <%= f.submit %>
<% end %>
<h1>Make a new task!</h1>

<%= form_for @task do |f| %>
  <p class="form-title">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </p>

  <p class="form-title">
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-description' %>
  </p>

  <p class="form-title">
  <%= f.label :completed_at %>
  <%= f.text_field :completed_at, class: 'form-completed' %>
  </p>

  <%= f.submit %>
<% end %>
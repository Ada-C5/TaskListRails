<%= form_for(zone) do |f| %>
  <p class="form-title">
  <%= f.label :title %>
  <%= f.text_field :title %>
  </p>

  <p class="form-description">
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-description' %>
  </p>

  <p class="form-completed">
  <%= f.label :completed_at %>
  <%= f.text_field :completed_at, class: 'form-completed' %>
  </p>

  <p class="form-person">
  <%= f.label :person %>
  <%= f.select :person_id, options_from_collection_for_select( @people , :id, :name), include_blank: true %>
  </p>

  <%= f.submit %>
<% end %>

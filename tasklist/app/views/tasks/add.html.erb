<section class="add-center">
  <div class="add-floating">

    <%= form_for @task, :html => {:class => "item-task"} do |f| %>
      <%= f.label :task %>
      <%= f.text_field :task %><br />

      <%= f.label :priority, :class => 'add-task' %>
      <%= f.radio_button :priority, 'urgent' %>
      <%= label :priority, 'urgent', :class => 'radio' %>
      <%= f.radio_button :priority, 'medium' %>
      <%= label :priority, 'medium', :class => 'radio' %>
      <%= f.radio_button :priority, 'low' %>
      <%= label :priority, 'low', :class => 'radio' %> <br />

      <%= f.label :due_date %>
      <%= f.text_field :due_date %> <br />

      <%= f.label :comments %>
      <%= f.text_field :comments%> <br />

      <%=f.submit 'Add Task', :class => 'btn'%>
    <% end %>
  </div>
</section>




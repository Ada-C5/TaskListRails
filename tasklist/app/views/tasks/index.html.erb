<% if @tasks %>
<h1 class="WHOOT">Tasks</h1>
  <section class="table">
    <table>
      <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Completed Date</th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @tasks.each do |task| %>
        <tr class="<%= 'completed' unless task.completed_at.nil? %>">
          <td><%= link_to task.title, "/#{task.id}" %></td>
          <td><%= task.description %></td>
          <td><%= task.completed_at %></td>
          <td class="edit"><a href="/tasks/<%= task.id %>/edit"><i class="fa fa-pencil"></i></a></button></td>
          <td class="delete-button">
            <%= form_tag "/tasks/#{task.id}", class: "delete-task", method: :delete do %>
              <button class="alert" type="submit" onclick="return confirm('Are you sure?');"><i class="fa fa-times-circle"></i></button>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>
<% end %>

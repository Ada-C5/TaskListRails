<% if @tasks %>
<h1 class="WHOOT">Tasks</h1>
  <section class="table">
    <table>
      <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Completed Date</th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @tasks.each do |task| %>
        <tr class="<%= 'completed' unless task.completed_at.nil? %>">
          <td><%= link_to task.title, task_path(task.id) %></td>
          <td><%= task.description %></td>
          <td><%= task.completed_at %></td>
          <td>
            <%= link_to task_edit_path(task.id) do %>
              <i class="fa fa-pencil"></i>
            <% end %>
          </td>
          <td>
            <%= link_to task_delete_path(task.id), method: :delete, onclick: "return confirm('Are you sure you want to delete this task?');" do %>
              <i class="fa fa-times-circle"></i></button>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </section>
<% end %>

<p>Find me in app/views/tasks/index.html.erb</p>

<ul class="list-tasks">

<%# loop through all tasks and display task titles %>
<% @tasks.each do |task| %>
  <li class="task-tile">

    <%= link_to task.title, task_path(task.id), class: "single-task"%>

    <%= link_to "COMPLETE", task_path(task.id), method: :put %>

    <%= link_to "DELETE", task_path(task.id), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>

  </li>

<% end %>

</ul>

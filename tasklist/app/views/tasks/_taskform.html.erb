<div class="task-container">
<%= form_for @task do |f| %>
  <%= f.label :task_name %>
  <%= f.text_field :task_name %><br/>
  <%= f.label :task_description %>
  <%= f.text_field :task_description %><br/>
  <%= f.label :Person %>
  <%= f.select "person_id", options_from_collection_for_select( @people, "id", "name"),
  :include_blank => true %><br/>
  <%= f.submit %>
<% end %>
</div>
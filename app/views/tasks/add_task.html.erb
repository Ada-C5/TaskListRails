<%= form_for @task do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :value => @task.name %>
  <%= f.label :description %>
  <%= f.text_field :description, :value => @task.description %>
  <%= f.label :completed_at %>
  <%= f.text_field :completed_at, :value => @task.completed_at %>
  <%= f.submit %>
<% end %>

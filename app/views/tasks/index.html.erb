<span class="add_link"><%= link_to " » Add New Task « ", tasks_new_path %></span>

<ul class="tasklist">
<% @all_tasks.each do |task|  %>
  <% if !task.completed_at.nil? %>
    <li class="complete">
  <% else %>
    <li class="incomplete">
  <% end %>
      <%= link_to task.name, task_path(task.id) %><br>
      <ul class="options">
        <li><%= button_to "DONE!", complete_path(task.id), method: :put %></li>
        <li>Edit</li>
        <li>
          <%= link_to "Delete", delete_path(task.id), method: :delete,
          data: { confirm: 'Are you sure you want to delete this task?' } %>
        </li>
      </ul>
    </li>
<% end %>
</ul>

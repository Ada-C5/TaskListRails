  <table>
    <tr class="header-row">

      <th><h3>Title</h3></th>
      <th><h3>Description</h3></th>
      <th><h3>Complete</h3></th>
      <th><h3>Edit</h3></th>
      <th><h3>Delete</h3></th>

    </tr>
    <tr class="table-row"><% @task_list.each do |task| %></tr>
    <td><%=link_to task.title, "/#{task.title}", class: "links" %></td>
    <td><p><%=task.description %></p></td>


    <td class="completed">
    <%= link_to update_path(task.id) do %>
        <i class="fa fa-check-square-o" aria-hidden="true"></i>
    <% end %>
    </td>

    <td class="edit">
    <%= link_to edit_path(task.id) do %>
      <i class="fa fa-pencil" aria-hidden="true"></i>
    <% end %>
    </td>
    <td class="delete">
    <%= link_to delete_path(task.id), method: :delete, data: {confirm: 'Are you sure you want to delete this task?'} do %>
        <i class="fa fa-trash" aria-hidden="true"></i>
    <% end %>
    </td>
    <% end %>

  </table>


<%= link_to "Add A Task", tasks_new_path %>

<% @tasks.each do |task| %>

		<% if task.id % 2 == 0 %>

			<li class="even-task">
				<span class="task-title"><%= task.id %>. <%= task.name.capitalize %></span><br>
				<span class="task-desc"><%= task.description %></span><br>
			<span class="completion"><span class="bold-text">Completed On:</span> <%= task.completed_at %></span><br>
	 			<%= button_to "details", 
	 				{:controller => :tasks, :action => 'show', :id => task.id},
	 				:method => :get %>
	 			<%= button_to "complete", 
         {:controller => :tasks, :action => 'complete', :id => task.id }, 
         :method => :post, data: { confirm: "Are you sure?" } %>
	 			
	 			<%= button_to "delete", 
        {:controller => :tasks, :action => 'delete', :id => task.id }, 
        :method => :delete, data: { confirm: "Are you sure?" } %>
			</li>

			<% else %>

			<li class="odd-task">
				<span class="task-title"><%= task.id %>. <%= task.name.capitalize %></span><br>
				<span class="task-desc"><%= task.description %></span><br>
 			<span class="completion"><span class="bold-text">Completed On:</span> <%= task.completed_at %></span><br>
	 			<%= button_to "details", 
	 				{:controller => :tasks, :action => 'show', :id => task.id},
	 				:method => :get %>
	 			<%= button_to "complete", 
         {:controller => :tasks, :action => 'complete', :id => task.id }, 
         :method => :post, data: { confirm: "Are you sure?" } %>
	 			
	 			<%= button_to "delete", 
        {:controller => :tasks, :action => 'delete', :id => task.id }, 
        :method => :delete, data: { confirm: "Are you sure?" } %>
			</li>
		<% end %>

<% end %>
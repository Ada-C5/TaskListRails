<h1> Here is a big list of tasks</h1>

<h1><a href='/tasks/new'>Add a Task!</a></h1>


<table>
	<tr>
		<th>Task Name</th>
		<th>Description</th>
		<th>Completed</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	<% @tasks.each do |task|%>
	<tr>

		<td><%= link_to task.name, "/tasks/#{task.id}" %>: <%= task.description %> </td>
		<td><%= task.description %> </td>
		<td><%= task.completed_at %> </td>
		

		<td><%= button_to "Edit", "/tasks/#{task.id}/edit", :method => :edit %>
 		</td>
 		<td><%= button_to "Delete", "/tasks/#{task.id}", :method => :delete,  data: { confirm: "Are you sure?" } %>
 		</td>
	</tr>
	<% end %>
</table>

<h1>To Do List</h1>

<div class="task-container">
 <% @tasks.each do |task| %>
    <div class="task-item">
        <%= link_to task.name, "/tasks/#{task.id}" %>
      <div class="task-description">
        <%= task.description %> <br/>
         <!-- Is the task associated with the person? If not, then don't show the task! -->
        <% if task.person != nil %>
        <div class="task-assignment">
           Assigned to: <%= task.person.name %>
        </div>
        <div class="task-complete">
           Completed on: <%= task.completed_at %>
        </div>
      <% end %>
      </div>
        <div
          class="people-item"> <%= link_to "people", "/people" %>
        </div>
<div class="">
    <%= button_to "Edit", "/tasks/#{task.id}/edit", method: :get %>
    <%= button_to "Complete?", "/tasks/#{task.id}/complete", method: :patch %>
    <%= button_to "Delete", "/tasks/#{task.id}", method: :delete,
    :onclick => "return confirm('Are you sure you want to delete this task?')" %>
  <% end %>
</div>

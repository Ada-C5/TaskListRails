<h1>Here is your task</h1>

<table>
	<tr>
		<th>Task Name</th>
		<th>Description</th>
		<th>Completed</th>
		<th>Task Owner</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>

	<tr>

		<td><%= @task.name %> </td>
		<td><%= @task.description %> </td>
		<td><%= @task.completed_at %> </td>
		<td><%= Person.find(@task.person_id).name %> </td>
		
		<td><%= button_to "Edit", "/tasks/#{@task.id}/edit", :method => :get %>
 		</td>
 		<td><%= button_to "Delete", "/tasks/#{@task.id}", :method => :delete,  data: { confirm: "Are you sure?" } %>
 		</td>
	</tr>
</table>
<h2>Completed Tasks</h2>

<table class = "all-tasks">

	<tr>
		<th>Task</th>
		<th class="center">Person</th>
    <th class="center">Date Completed</th>
		<th class="center">Delete</th>
	</tr>

	<% @all_tasks.each do |task| %>
	  <tr>
      <td><%= link_to task.title, task_path(task.id) %></td>
			<td class="center">
				<% if task.person_id != nil %>
					<% num = task.person_id %>
					<%= Person.find(num).name %>
					<% end %>
			</td>
      <td class="center"><%= task.completed_at %></td>
			<td class="center">
				<%= button_to "Delete", task_path(task.id),
				method: :delete,
				data: { confirm: "Do you want to delete this forever?" } %>
			</td>
    </tr>
	<% end %>

</table>

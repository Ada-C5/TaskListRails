<%= form_for @selected_task do |t| %>
  <%= t.label :title %>
  <br>
  <%= t.text_field :title %>
  <br><br>
  <%= t.label :description %>
  <br>
  <%= t.text_field :description %>
  <br><br>
  <%= t.label :person_id %>
  <br>
  <%= t.select "person_id",
  options_from_collection_for_select(@all_people , "id", "name") %>
  <br><br>
  <%= t.submit %>
<% end %>

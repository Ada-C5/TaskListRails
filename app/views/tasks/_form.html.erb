<%= form_for @task do |f| %>


<table class="new_task">
	<td><%= f.label :name %>
  <%= f.text_field :name %></td>
  <td><%= f.label :description %>
  <%= f.text_field :description %></td>
  <td><%= f.label :owner %>
  <%= f.collection_select :person_id, Person.all, :id, :name, include_blank: true %></td>
  <td><%= f.submit %></td>
<% end %>
</table>
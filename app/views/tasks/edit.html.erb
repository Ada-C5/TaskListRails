<%= form_for @task do |f| %>

	<%= f.hidden_field :id %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.label :completed_at %>
  <%= f.text_field :completed_at %><br>

  <%= f.label :priority %>
  <%= f.text_field :priority %><br>

  <%= f.label :person_id %><br>
  <%= f.select :person_id, ['1', '2', '3', '4']%>

  <%= f.submit %>

<% end %>
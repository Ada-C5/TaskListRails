<h1> Edit task </h1>

<%= form_for @task do |f| %>
  <%= f.label :Name %>
  <%= f.text_field :name  %><br>
  <%= f.label :Person %>
  <%= f.select "person_id", options_from_collection_for_select
    ( @all_people , "id", "name", @task.person.id),:include_blank => true %> <br>
  <%= f.label :description %>
  <%= f.text_area :description , cols:25, rows:3 %><br>

  <%= f.label :priority %>
  <label>
  High<%= f.radio_button :priority, 'high' %>
  </label>
  <label>
  Medium<%= f.radio_button :priority, 'medium' %>
  </label>
  <label>
  Low<%= f.radio_button :priority, 'low' %><br>
  </label>

  <%= f.label :completed %>
  <%= f.radio_button :completed, Time.now %>

  <%= f.submit class: "button"%>
<% end %>

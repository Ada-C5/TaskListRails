<h1> Edit task </h1>


<%= form_for @task do |f| %>
  <%= f.label :Name %>
  <%= f.text_field :name  %><br>
  <%= f.label :Person %>
  <%= f.text_field :person  %><br>
  <%= f.label :description %>
  <%= f.text_area :description , cols:25, rows:3 %><br>
  <%= f.label :priority %>
  <%= f.label :completed %>
  <%= f.radio_button :completed, 'completed' %>
  <label>
  High<%= f.radio_button :priority, 'high' %>
  </label>
  <label>
  Medium<%= f.radio_button :priority, 'medium' %>
  </label>
  <label>
  Low<%= f.radio_button :priority, 'low' %>
  </label>

  <%= f.submit class: "button"%>
<% end %>

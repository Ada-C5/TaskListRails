	<br>
	<%= f.label :'Description:' %>
	<br>
	<%= f.text_field :description, class: 'field' %>
	<br>
	<%= f.label :Person %>
 <%= f.select "person_id", options_from_collection_for_select( @person, "id", "name") %>

			<%= f.submit %>


	<% end %>

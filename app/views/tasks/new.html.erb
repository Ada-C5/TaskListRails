<fieldset>
  <legend>Create New Task</legend>
  <%= form_for @task, :html => { :class => "form-horizontal" } do |f| %>
    <div class="control-group">
      <%=f.label :name %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
      <%=f.label :description %>
      <div class="controls">
        <%= f.text_field :description %>
      </div>
    </div>

    <br>
    <div class="form-actions", class="dropdown", class="btn btn-primary dropdown-toggle">
      <%=f.label "Person"%>
      <%= f.select :person_id, Person.pluck(:name), :class => "dropdown-menu" %>    </div>
    <br>

    <div class="form-actions">
      <%= f.submit class:'btn btn-success' %>
    </div>
  <% end %>

<h1> Test </h1>

<pre><%= params %></pre>

<%= form_for @task do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :description %>
<%= f.text_field :description %>

<!-- this will render anywhere on the page -->

<% if flash[:error] != nil %>
<div>
  <!-- this is an array of errors  -->
  <% flash[:error].each do |msg|%>
  <%= msg %>
  <% end %>
</div>
<% end %>

<%= f.select :person_id, Person.all.map {|person| [person.name, person.id]} %>

<%= f.submit %>

<% end %>

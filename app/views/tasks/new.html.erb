<fieldset>
  <legend>Create New Task</legend>
  <%= form_for @task, :html => { :class => "form-horizontal" } do |f| %>
    <div class="control-group">
      <%=f.label :name %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="control-group">
      <%=f.label :description %>
      <div class="controls">
        <%= f.text_field :description %>
      </div>
    </div>

    <br>

    <div class="form-actions">
      <%= f.submit "add task", class:'btn btn-success' %>
    </div>
  <% end %>

<h1>Hi <%= @person.name %>, you have <%=@uncompleted%> uncompleted tasks!</h1>
<h2><a class='task_button' href='/tasks'>Home</a></h2>
<h2><a class='task_button' href='/tasks/new'>Add a Task</a></h2>
<h2><a class='task_button' href='/people'>All Task Owners</a></h2>

<table>
	<tr>
		<th>Task Name</th>
		<th>Description</th>
		<th>Completed</th>
		<th>Edit</th>
		<th>Delete</th>
		<th>Complete</th>
	</tr>

	<% @tasks.each do |task| %>
		<tr>
			<td><%= task.name %> </td>
			<td><%= task.description %> </td>
			<td><%= task.completed_at %> </td>
			<td><%= button_to "Edit", "/tasks/#{task.id}/edit", :method => :get %></td>
 			<td><%= button_to "Delete", "/tasks/#{task.id}", :method => :delete,  data: { confirm: "Are you sure?" } %></td>
 			<td><% if task.completed_at == nil %>
      		<%= button_to "Completed", "/tasks/#{task.id}/completed", :method => :patch %>
      			<% else %>
      			Done
      		<% end %>
 			</td>
 		</tr>
	<% end %>
</table>
<h1>Hi <%= @person.name %>, here are your tasks!</h1>

<table>
	<tr>
		<th>Task Name</th>
		<th>Description</th>
		<th>Completed</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>

	

		<% @tasks.each do |task| %>
		<tr>
			<td><%= task.name %> </td>
			<td><%= task.description %> </td>
			<td><%= task.completed_at %> </td>

		<td><%= button_to "Edit", "/tasks/#{task.id}/edit", :method => :get %>
 		</td>
 		<td><%= button_to "Delete", "/tasks/#{task.id}", :method => :delete,  data: { confirm: "Are you sure?" } %>
 		</td>
 						</tr>
			<% end %>

</table>
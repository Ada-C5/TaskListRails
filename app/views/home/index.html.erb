<h1>Here's a list of tasks!</h1>
<table class="table table-striped table-hover table-users">

<pre><%=params%></pre>

<thead>
  <tr>
    <th class="hidden-phone">Task Name</th>
    <th>Remove</th>
    <th>Edit</th>
  </tr>
</thead>

<tbody>
  <% @tasks.each do |task| %>
    <tr>
    <td class="hidden-phone">
      <%= link_to task.name, "/tasks/#{task.id}" %>
    </td>
    <td>
      <%= link_to "", {:controller => :home, :action => 'destroy', :id => task.id}, method: :delete, data: {confirm: "Are you sure?"}, class:"glyphicon glyphicon-trash"%>
    </td>
  </tr>
  <%end%>
</tbody>
</ul>
</table>


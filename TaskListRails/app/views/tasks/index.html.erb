
<div>
  <%= link_to "Add a Task!", "/tasks/new" %>
</div>

<h1 class="wave_one_header">My Task List</h1>

<section>
  <ul class="WHOOT">
    <% @tasks.each do |task| %>
      <li><%= link_to task.name, "/tasks/#{task.id}" %>
        <%= link_to "Delete this Task", "/tasks/#{task.id}", method: :delete, data:
        { confirm: "Are you sure you want to delete this task?"} %></li>
    <%end%>
  </ul>
</section>
